<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".transaction.yearly">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/gradient_dark_green"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/yearly_less_than"
                android:layout_width="50dp"
                android:background="@drawable/less_than"
                android:layout_height="40dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="80dp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/year_value"
                android:layout_width="wrap_content"
                android:text="2024"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:gravity="end"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/yearly_greater_than"
                android:layout_width="50dp"
                android:background="@drawable/right_than"
                android:layout_height="40dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="INCOME"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="EXPENSES"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="SAVING"
                android:textSize="20dp"
                android:layout_marginRight="20dp"
                android:textColor="@color/light_blue"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:id="@+id/year_reco"
        tools:listitem="@layout/yearly_list"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:gravity="end"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="80dp"
                android:text=""
                android:id="@+id/month_income"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textColor="@color/light_blue"
                android:gravity="center"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="100dp"
                android:text=""
                android:id="@+id/month_expenses"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/light_blue"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/month_saving"
                android:layout_width="80dp"
                android:text=""
                android:gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="15dp"
                android:textColor="@color/light_blue"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>



</LinearLayout>