<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@drawable/androidcurve"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".kuna.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DAILY"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/red"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="18dp"/>

            <ImageButton
                android:id="@+id/secondActivityButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/baseline_dehaze_24" />
        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TRANSAC"
            android:textColor="@color/black"
            android:layout_marginLeft="18dp"
            android:textStyle="bold"
            android:textSize="35dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/grey"
            android:gravity="center"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="39dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UPLOAD"
                android:textColor="#FF0000"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="DATA"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Layout_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:layout_marginTop="35dp"
            android:background="@drawable/pink">

            <TextView
                android:id="@+id/updatedatelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="17dp"
                android:text="26/06/2024"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/black"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Revenue"
                    android:textColor="@color/white"
                    android:textSize="16dp" />


                <EditText
                    android:id="@+id/entry1"
                    android:layout_width="69dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/white"
                    android:gravity="center"
                    android:hint="0"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:phoneNumber="true"
                    android:textColor="@color/black"
                    android:textColorHint="#000000"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:background="@drawable/black"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingTop="5dp"
                    android:paddingRight="10dp"
                    android:paddingBottom="5dp"
                    android:text="Income"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="4dp"
               android:layout_marginTop="7dp"
               android:orientation="horizontal">


               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="13dp"
                   android:background="@drawable/black"
                   android:gravity="center"
                   android:paddingLeft="10dp"
                   android:paddingTop="5dp"
                   android:paddingRight="10dp"
                   android:paddingBottom="5dp"
                   android:text="Expense"
                   android:textColor="@color/white"
                   android:textSize="16dp" />

               <TextView
                   android:layout_width="69dp"
                   android:layout_height="32dp"
                   android:id="@+id/expences"
                   android:layout_marginLeft="13dp"
                   android:background="@drawable/white"
                   android:gravity="center"
                   android:hint="0"
                   android:textColor="#FF0000"
                   android:paddingTop="4dp"
                   android:paddingBottom="4dp"
                   android:textColorHint="#FF0000"
                   android:textSize="16dp" />

               <TextView
                   android:layout_width="69dp"
                   android:layout_height="32dp"
                   android:id="@+id/income"
                   android:layout_marginLeft="63dp"
                   android:background="@drawable/white"
                   android:gravity="center"
                   android:textColor="@color/black"
                   android:hint="0"
                   android:paddingTop="4dp"
                   android:paddingBottom="4dp"
                   android:textColorHint="#000000"
                   android:textSize="16dp" />

           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="55dp"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/add"
                    android:layout_width="69dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/yellow"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="ADD"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/undo"
                    android:layout_width="69dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="63dp"
                    android:background="@drawable/black"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Undo"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/submit"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="13dp"
                    android:background="@drawable/white"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Submit"
                    android:textColor="@color/pink"
                    android:textSize="16dp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/updatebutton"
            android:layout_width="122dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout3"
            android:layout_alignParentStart="true"
            android:layout_marginStart="230dp"
            android:layout_marginTop="39dp"
            android:layout_marginBottom="40dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/pink"
            android:text="UPDATE DATA" />
        
    </LinearLayout>
</ScrollView>