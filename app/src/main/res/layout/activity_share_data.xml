<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Database.share_data">

    <LinearLayout
        android:id="@+id/share_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/dark_green"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_key_for_main"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/left_arrow" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="11dp"
            android:text="Setting"
            android:textColor="@color/white"
            android:textSize="40dp" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/setting_reco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/share_linearLayout"
        android:layout_marginTop="0dp"
        tools:listitem="@layout/setting_view" />
    
    <androidx.cardview.widget.CardView
        android:id="@+id/old_password"
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="28dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        android:elevation="26dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="26dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Enter Old Password"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:outlineSpotShadowColor="@color/black"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:counterEnabled="true"
                    app:counterMaxLength="18"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/green"
                    android:hint="Password">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enteroldPasswordEt"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:maxLength="19">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:textSize="28dp"
                    android:id="@+id/old_cancel"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textSize="28dp"
                    android:id="@+id/old_Next"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/new_password"
        android:layout_margin="28dp"
        app:cardCornerRadius="10dp"
        android:visibility="gone"
        android:elevation="26dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="26dp"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Enter New Password"
                android:textAlignment="center"
                android:layout_height="wrap_content"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:outlineSpotShadowColor="@color/black"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:counterEnabled="true"
                    app:counterMaxLength="18"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/green"
                    android:hint="New Password">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enter_new_password"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:maxLength="19">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:outlineSpotShadowColor="@color/black"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:counterEnabled="true"
                    app:counterMaxLength="18"
                    app:endIconMode="password_toggle"
                    app:hintTextColor="@color/green"
                    android:hint="Confrim Password">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enter_confrim_password"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:maxLength="19">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Cancel"
                    android:textSize="28dp"
                    android:id="@+id/new_cancel"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    app:cardCornerRadius="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:text="Confirm"
                    android:textColor="@color/white"
                    android:background="@color/red"
                    android:textSize="28dp"
                    android:id="@+id/new_Next"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_height="wrap_content"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/emailEnter"
        android:layout_margin="28dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        android:elevation="26dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="26dp"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Enter Email"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
                <ImageView
                android:layout_width="30dp"
                    android:id="@+id/email_delete"
                android:src="@drawable/delete"
                android:layout_height="30dp">

            </ImageView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:outlineSpotShadowColor="@color/black"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:hintTextColor="@color/green"
                    android:hint="Email Address">
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enter_email"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Reset"
                    android:textColor="@color/black"
                    android:background="#FFEA30"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/email_Next"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_centerInParent="true"
        android:id="@+id/edit_name"
        android:layout_margin="28dp"
        app:cardCornerRadius="10dp"
        android:elevation="26dp"
        android:visibility="gone"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="26dp"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                style="@style/TextAppearance.AppCompat.Title"
                android:text="Edit Your Name"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>
                <ImageView
                android:layout_width="30dp"
                    android:id="@+id/edit_name_delete"
                android:src="@drawable/delete"
                android:layout_height="30dp">

            </ImageView>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                android:outlineSpotShadowColor="@color/black"
                android:layout_height="wrap_content">
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    app:hintTextColor="@color/green"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/enter_edit_your_name"
                        android:layout_width="match_parent"
                        android:textStyle="bold"
                        android:layout_height="wrap_content">
                    </com.google.android.material.textfield.TextInputEditText>
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.cardview.widget.CardView>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/edit_uid"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/edit_no"
                android:layout_height="0dp"/>
            <TextView
                android:layout_width="0dp"
                android:id="@+id/edit_email"
                android:layout_height="0dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardCornerRadius="20dp"
                    android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Change Name"
                    android:textColor="@color/black"
                    android:background="#FFEA30"
                    android:textSize="28dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/edit_name_Next"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_height="match_parent"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    



</RelativeLayout>